{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "dist/cjs",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "declarationDir": "./types"
  },
  "exclude": [
    "node_modules",
    "types",
    "typings",
    "dist",
    "context.d.ts",
    "config.d.ts",
    "middleware.d.ts",
    "editing.d.ts",
    "monitoring.d.ts",
    "site.d.ts",
    "graphql.d.ts",
    "utils.d.ts",
    "src/tests/*",
    "src/test-data/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
